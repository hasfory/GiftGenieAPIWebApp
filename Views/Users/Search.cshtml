@model IEnumerable<GiftGenieAPIWebApp.Models.User>
@{
    ViewData["Title"] = "Search users";
    var q = ViewBag.Query as string;
}

<h2>Search users</h2>

<form class="table align-middle bg-white shadow-sm rounded">
    <input type="text" name="q" value="@q" class="form-control" placeholder="Username or Full Name" />
</form>

@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table align-middle bg-white shadow-sm rounded">
        <thead class="table-light">
            <tr><th>Full Name</th><th>Username</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.FullName</td>
                    <td class="text-muted">@($"@{u.Username}")</td>
                    <td>
                        <a asp-action="Profile" asp-route-id="@u.UserId"
                           class="btn btn-outline-pink btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
